/*------------------------------------*\
    $BUTTON SETTINGS
\*------------------------------------*/
$btn-font-size:                16px;
$btn-default-padding:          0;

$btn-default-color:            #6d6e71;
$btn-default-bg:               #f1f1f1;
$btn-default-border:           darken($btn-default-bg, 10%);

$btn-primary-color:            $color-white;
$btn-primary-bg:               $color-gold;
$btn-primary-border:           darken($color-gold, 5%);

$btn-alt-color:                $color-white;
$btn-alt-bg:                   $color-gray;
