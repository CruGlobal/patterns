/*------------------------------------*\
    VARS.SCSS
\*------------------------------------*/
/**
 * Any variables you find set in brackets.css’ `_vars.scss` that you do not wish to
 * keep, simply redefine here. This means that if brackets.css, for example, sets
 * your `$base-font-size` at 16px and you wish it to be 14px, simply redeclare
 * that variable in this file. Brackets.css ignores its own variables in favour of
 * using your own, so you can completely modify how brackets.css works without ever
 * having to alter the framework itself.
 */





/*------------------------------------*\
    $PROJECT-MODES
\*------------------------------------*/
/**
 * This allows you to use debug settings which can be useful in
 * development.
 *
 * Make sure to set this to false before using the code for production.
 */
$debug-mode:        false;





/*------------------------------------*\
    $OBJECTS-AND-ABSTRACTIONS
\*------------------------------------*/
/**
 * All of brackets.css’ objects and abstractions are initially turned off by
 * default. This means that you start any project with as little as possible,
 * and introducing objects and abstractions is as simple as switching the
 * following variables to `true`.
 */
$use-grids:         false;
$use-nav:           true;
$use-buttons:       true;
$use-island:        false;
$use-block-list:    false;
$use-pagination:    true;
$use-breadcrumb:    true;
$use-media:         true;






/*------------------------------------*\
    $OVERRIDES
\*------------------------------------*/
/**
 * Place any variables that should override brackets.css’ defaults here.
 */
$base-font-size:         19px;
$base-line-height:       29px;

$base-background-color: #f7f7f7;

$header-font-ratio:      1.313;
$header-font-weight:     400;

$breakpoints: (
    'palm' '(max-width: 480px)',
    'lap' '(min-width: 481px) and (max-width: 1023px)',
    'portable' '(max-width: 980px)',
    'desk' '(min-width: 981px)'
) !default;


$enable-margins:          true;
$enable-margins--tiny:    true;
$enable-margins--small:   true;
$enable-margins--large:   false;
$enable-margins--huge:    false;
$enable-margins--none:    true;


$enable-paddings:         true;
$enable-paddings--tiny:   true;
$enable-paddings--small:  true;
$enable-paddings--large:  false;
$enable-paddings--huge:   false;
$enable-paddings--none:   true;





/*------------------------------------*\
    $CUSTOM
\*------------------------------------*/
/**
 * Place any of your own variables that sit on top of brackets.css here.
 */


/*------------------------------------*\
    $Fonts
\*------------------------------------*/
$base-font-family:      "freight-sans-pro", "Helvetica Neue", Arial, Helvetica, sans-serif;
$numberal-font-family:  "Helvetica Neue", Arial, Helvetica, sans-serif;

$base-text-color:       #353535;

$paragraph-font-size:   21px;
$paragraph-line-height: 31px;





/*------------------------------------*\
